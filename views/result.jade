doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{__('TITLE', community)}
    link(href="css/style.css", rel="stylesheet", type="text/css")
    link(href="//fonts.googleapis.com/css?family=Exo+2:400,500", rel="stylesheet", type="text/css")
  body
    img(src="https://boilermake.org/assets/images/hammers-white.svg", class="logo")
    #wrapper
      .main
        .header
          h1 #{community}
          h2(class="#{isFailed?'error':''}") !{message}
          if isFailed
            h2
              a(href="http://boilermake4.slack.com/signup") Use this link to directly signup through Slack
